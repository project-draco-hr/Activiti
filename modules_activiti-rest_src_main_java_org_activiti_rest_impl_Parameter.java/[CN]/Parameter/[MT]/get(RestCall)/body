{
  String textValue=null;
  if (isParameter) {
    textValue=call.getHttpServletRequest().getParameter(name);
  }
 else {
    textValue=call.getUrlVariables().get(name);
  }
  if (textValue == null) {
    if (defaultValue != null) {
      return defaultValue;
    }
    throw new RestException(HttpServletResponse.SC_BAD_REQUEST,"parameter " + name + " is required");
  }
  return convert(textValue);
}
