{
  String userName=event.getLoginParameter("username");
  String password=event.getLoginParameter("password");
  boolean success=identityService.checkPassword(userName,password);
  if (success) {
    User user=identityService.createUserQuery().userId(userName).singleResult();
    ExplorerApplication.getCurrent().setUser(user);
    ExplorerApplication.getCurrent().showDefaultContent();
  }
 else {
    refreshUi();
    ExplorerApplication.getCurrent().showErrorNotification(ExplorerApplication.getCurrent().getMessage(Messages.LOGIN_FAILED_HEADER),ExplorerApplication.getCurrent().getMessage(Messages.LOGIN_FAILED_INVALID));
  }
}
