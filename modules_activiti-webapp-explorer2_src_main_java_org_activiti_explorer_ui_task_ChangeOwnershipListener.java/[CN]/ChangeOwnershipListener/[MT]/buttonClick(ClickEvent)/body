{
  final InvolvePeoplePopupWindow involvePeoplePopupWindow=new InvolvePeoplePopupWindow(i18nManager.getMessage(Messages.TASK_OWNER_TRANSFER),task,false);
  involvePeoplePopupWindow.addListener(new SubmitEventListener(){
    protected void submitted(    SubmitEvent event){
      String selectedUser=involvePeoplePopupWindow.getSelectedUserId();
      task.setOwner(selectedUser);
      ProcessEngines.getDefaultProcessEngine().getTaskService().saveTask(task);
      taskInvolvedPeopleComponent.refreshOwner();
    }
    protected void cancelled(    SubmitEvent event){
    }
  }
);
  ExplorerApp.get().getViewManager().showPopupWindow(involvePeoplePopupWindow);
}
