{
  InputStream is=null;
  try {
    is=new FileInputStream(new File(path));
    byte[] resource=IoUtil.readInputStream(is,path);
    IoUtil.closeSilently(is);
    return resource;
  }
 catch (  FileNotFoundException e) {
    if (throwErrorOnMissing) {
      throw new ActivitiException("Can't read " + path,e);
    }
    return null;
  }
}
