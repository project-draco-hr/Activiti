{
  InputStream inputStream=null;
  if (classLoader == null) {
    inputStream=ReflectUtil.getResourceAsStream(resource);
  }
 else {
    classLoader.getResourceAsStream(resource);
  }
  if (inputStream == null) {
    throw new ActivitiIllegalArgumentException("resource '" + resource + "' doesn't exist");
  }
  return inputStream;
}
