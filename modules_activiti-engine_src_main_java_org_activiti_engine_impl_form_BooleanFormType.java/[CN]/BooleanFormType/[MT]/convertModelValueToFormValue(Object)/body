{
  if (modelValue == null) {
    return null;
  }
  if (Boolean.class.isAssignableFrom(modelValue.getClass()) || boolean.class.isAssignableFrom(modelValue.getClass())) {
    return modelValue.toString();
  }
  throw new ActivitiException("Model value is not of type boolean, but of type " + modelValue.getClass().getName());
}
