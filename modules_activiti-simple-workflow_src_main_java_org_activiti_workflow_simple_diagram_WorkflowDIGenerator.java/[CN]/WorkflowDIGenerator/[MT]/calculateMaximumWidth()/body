{
  int width=0;
  for (  BlockOfSteps blockOfSteps : allStepBlocks) {
    if (blockOfSteps.getNrOfSteps() == 1) {
      width+=TASK_WIDTH + SEQUENCE_FLOW_WIDTH;
    }
 else {
      width+=TASK_BLOCK_WIDTH + SEQUENCE_FLOW_WIDTH;
    }
  }
  width+=SEQUENCE_FLOW_WIDTH + 2 * EVENT_WIDTH;
  return width;
}
