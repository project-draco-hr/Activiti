{
  dueDateLabel=new PrettyTimeLabel(i18nManager.getMessage(Messages.TASK_DUEDATE_SHORT),task.getDueDate(),i18nManager.getMessage(Messages.TASK_DUEDATE_UNKNOWN));
  dueDateLabel.addStyleName(ExplorerLayout.STYLE_TASK_HEADER_DUEDATE);
  dueDateLabel.setSizeUndefined();
  dueDateLabel.addStyleName(ExplorerLayout.STYLE_CLICKABLE);
  addComponent(dueDateLabel);
}
