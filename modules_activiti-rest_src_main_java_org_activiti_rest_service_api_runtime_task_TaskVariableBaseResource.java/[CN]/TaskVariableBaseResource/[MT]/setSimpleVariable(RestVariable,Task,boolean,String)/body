{
  if (restVariable.getName() == null) {
    throw new ActivitiIllegalArgumentException("Variable name is required");
  }
  RestVariableScope scope=restVariable.getVariableScope();
  if (scope == null) {
    scope=RestVariableScope.LOCAL;
  }
  Object actualVariableValue=restResponseFactory.getVariableValue(restVariable);
  setVariable(task,restVariable.getName(),actualVariableValue,scope,isNew);
  return restResponseFactory.createRestVariable(restVariable.getName(),actualVariableValue,scope,task.getId(),RestResponseFactory.VARIABLE_TASK,false,serverRootUrl);
}
